<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    tools:context="com.kalantos.spitballv001.MenuActivity"
    android:background="@drawable/backgreen">



    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/players2"
        android:id="@+id/button2"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:onClick="intentGame"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/player1"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="intentChooseDifficulty"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/acercaDe"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ballgreen"
        android:id="@+id/imageView0"
        android:layout_above="@+id/imageView2"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ballgreen"
        android:id="@+id/imageView1"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/imageView0" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ballgreen"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/button3"
        android:layout_alignEnd="@+id/imageView1"
        android:layout_marginEnd="46dp" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ballpink"
        android:id="@+id/imageView4"
        android:layout_marginStart="60dp"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ballpink"
        android:id="@+id/imageView3"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/imageView5" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ballpink"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView4"
        android:layout_toEndOf="@+id/button4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clickMode"
        android:id="@+id/checkBox"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />


</RelativeLayout>
