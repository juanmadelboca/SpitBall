<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kalantos.spitball" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name="com.kalantos.spitball.MenuActivity"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kalantos.spitball.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.kalantos.spitball.finishGameActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.kalantos.spitball.ChooseDifficultyActivity"
            android:screenOrientation="landscape" > >
        </activity>
    </application>

</manifest>